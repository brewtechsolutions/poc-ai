# ── App ─────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000

# ── Database (Supabase / Postgres) ─────────────────────────
# Example (Supabase):
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/postgres?schema=public"
# Example (local Postgres):
# DATABASE_URL="postgresql://user:password@localhost:5432/sales_chatbot?schema=public"
DATABASE_URL="postgresql://user:password@localhost:5432/sales_chatbot?schema=public"

# ── OpenAI ─────────────────────────────────────────────────
OPENAI_API_KEY=sk-your-openai-key-here

# ── WhatsApp.js (for when you hook it up) ──────────────────
WHATSAPP_SESSION_PATH=./sessions

# ── Token & Performance Tuning ─────────────────────────────
MAX_TOKENS_PER_REQUEST=500
TOKEN_BUDGET_PER_CONVERSATION=2000
ENABLE_CACHING=true
CACHE_TTL=300        # seconds

# ── Agent Escalation ───────────────────────────────────────
AGENT_ESCALATION_ENABLED=true
AGENT_ESCALATION_THRESHOLD=0.5   # confidence below this → send to human

# ── Debugging ───────────────────────────────────────────────
DEBUG=true                       # set to true for verbose workflow debugging (shows all steps)